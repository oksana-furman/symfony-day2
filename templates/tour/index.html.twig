{% extends 'base.html.twig' %} {% block title %}{{ controller_name }}{% endblock %} {% block body %}


    <div id="hero" class="text-center m-3 p-3">
        <div class="inside">
            <h1>{{ controller_name }}</h1>
        </div>
    </div>
    <div class="container">
        <div class="headline m-3">
            <h1 class="text-center m-3">{{ controller_name }} Is The Best Travel Agency</h1>
        </div>
        <h1 class="text-center m-3">Top Destinations</h1>
        <div class="destinations">
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="img/Bora-Bora.jpg" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                      <h5 class="text-dark">Bora-Bora</h5>
                      <p class="text-dark">The beach is waiting for you.</p>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="img/Dubai.jpg" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                      <h5>Dubai</h5>
                      <p>Start your new adventure.</p>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="img/Maldives.jpg" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block">
                      <h5 class="text-dark">Maldives</h5>
                      <p class="text-dark">Take your time to enjoy this place.</p>
                    </div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
        </div>

        <h1 class="text-center m-3">Best Tours</h1>
        <div class="tours">
            {% for val in tours %}
            <div class="card" style="width: 18rem;">
                <img src="{{assets()}}" class="card-img-top" alt="{{val.destination}}">
                <div class="card-body">
                  <h5 class="card-title">Card title</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
              </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
<style>
#hero {   
    background-image: url('{{asset("img/vienna.jpg")}}');
}
</style>
{% endblock %}